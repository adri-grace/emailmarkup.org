---
import MoreMenu from '../RightSidebar/MoreMenu.astro';
import TableOfContents from '../RightSidebar/TableOfContents';

import FormattedDate from '@components/FormattedDate';
import Author from '@components/Author';

const { frontmatter, headings, githubEditUrl } = Astro.props;
const { title, author, pubDate } = frontmatter;
const publishedDate = new Date( frontmatter.pubDate );

---

<nav class="top-nav">
	<a href="/en/blog">‚Üê All articles</a>
</nav>

<article id="article" class="content">
	<section class="main-section">
		<h1 class="content-title" id="overview">{title}</h1>
		
		<div class="article-meta">
			
			<p class="article-meta-date">
				<b>Published:</b> <FormattedDate date={publishedDate} />
			</p>

			
			<Author name={author} />
		</div>


		<nav class="block sm:hidden">
			<TableOfContents client:media="(max-width: 50em)" {headings} />
		</nav>
		<slot />
	</section>
	<nav class="block sm:hidden">
		<MoreMenu editHref={githubEditUrl} />
	</nav>
</article>

<style>
	.top-nav {
		margin-bottom: 2rem;
	}
	.top-nav a {
		text-decoration: none;
	}

	.article-meta {
		margin-bottom: 4rem;
	}

	.article-meta-date {
		margin-top: 1rem;
		margin-bottom: .5rem;
	}

	.content {
		padding: 0;
		width: 100%;
		height: 100%;
		display: flex;
		flex-direction: column;
	}

	.content > section {
		margin-bottom: 4rem;
	}

	.block {
		display: block;
	}

	@media (min-width: 50em) {
		.sm\:hidden {
			display: none;
		}
	}
</style>
